<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="LOG4J"/>
    </settings>
    <!-- 别名 -->
    <typeAliases>
        <!-- 实体类所在的包名 -->
        <package name="com.kou.crm.settings.domain"/>
    </typeAliases>
    <!-- Sql映射文件的路径 -->
    <mappers>
        <!-- name是包名，这个包中的所有mapper.xml文件一次都能加载 -->
        <package name="com.kou.crm.settings.dao"/>
    </mappers>
</configuration>